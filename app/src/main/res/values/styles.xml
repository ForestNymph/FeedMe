<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorDarkGray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:timePickerStyle">@style/customTimePickerTheme</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="customTimePickerTheme" parent="android:style/Widget.Material.Light.TimePicker">
        <item name="android:numbersTextColor">@color/colorWhite</item>
        <item name="android:numbersBackgroundColor">@color/colorBlueTint</item>
        <item name="android:numbersSelectorColor">@color/colorNearBlack</item>
        <item name="android:headerBackground">@color/colorBlueTint</item>
    </style>

    <style name="CustomYellowButtonTheme" parent="android:Widget.Button">
        <item name="android:background">@color/colorYellow</item>
        <item name="android:textSize">@dimen/size_18_sp</item>
        <item name="android:layout_marginStart">4sp</item>
        <item name="android:layout_marginEnd">4sp</item>
        <item name="android:textColor">@color/colorBrokenWhite</item>
    </style>

    <style name="CustomGreenButtonTheme" parent="android:Widget">
        <item name="android:background">@color/colorGreen</item>
        <item name="android:textSize">@dimen/size_18_sp</item>
        <item name="android:layout_marginStart">4sp</item>
        <item name="android:layout_marginEnd">4sp</item>
        <item name="android:textColor">@color/colorBrokenWhite</item>
    </style>

    <style name="CustomRedButtonTheme" parent="android:Widget">
        <item name="android:background">@color/colorRed</item>
        <item name="android:textSize">@dimen/size_18_sp</item>
        <item name="android:layout_marginStart">4sp</item>
        <item name="android:layout_marginEnd">4sp</item>
        <item name="android:textColor">@color/colorBrokenWhite</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Color for numbers on picker -->
    <style name="NumberPickerTextColorStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/colorBrokenWhite</item>
    </style>
</resources>
