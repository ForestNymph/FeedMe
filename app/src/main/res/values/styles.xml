<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogStyle">@style/CustomDialogTheme</item>
        <item name="android:fontFamily">Roboto</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- AlertDialog style -->
    <style name="CustomDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons, checkboxes -->
        <item name="colorAccent">@color/colorTextGray</item>
        <item name="android:fontFamily">Roboto</item>

        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorDialogText</item>

        <!-- Used for the background -->
        <item name="android:background">@color/colorBrokeWhite</item>

        <item name="android:textSize">@dimen/button_font_size</item>
    </style>

    <!-- AlertDialog About style -->
    <style name="CustomAboutDialogTheme" parent="@style/Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons, checkboxes -->
        <item name="colorAccent">@color/colorDialogText</item>

        <!-- Used for the background -->
        <item name="android:background">#CC7C08</item>

        <!-- Used for the text size on buttons -->
        <item name="android:textSize">@dimen/button_font_size</item>

        <item name="android:windowTitleStyle">@style/CustomAboutTitleDialogTheme</item>
    </style>

    <style name="CustomAboutTitleDialogTheme">
        <item name="android:textColor">@color/colorDialogText</item>
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="CustomYellowAmountButtonTheme" parent="android:Widget.Button">
        <item name="android:background">@color/colorYellow</item>
        <item name="android:textSize">@dimen/text_font_size</item>
        <item name="android:layout_marginStart">4sp</item>
        <item name="android:layout_marginEnd">4sp</item>
        <item name="android:textColor">@color/colorBrokeWhite</item>
    </style>

    <style name="CustomGreenAmountButtonTheme" parent="android:Widget">
        <item name="android:background">@color/colorGreen</item>
        <item name="android:textSize">@dimen/text_font_size</item>
        <item name="android:layout_marginStart">4sp</item>
        <item name="android:layout_marginEnd">4sp</item>
        <item name="android:textColor">@color/colorBrokeWhite</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
