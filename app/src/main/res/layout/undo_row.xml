<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#888888"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/size_8_sp"
    tools:ignore="overdraw">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingEnd="@dimen/size_8_sp"
        android:paddingLeft="@dimen/size_12_sp"
        android:paddingRight="@dimen/size_8_sp"
        android:paddingStart="@dimen/size_12_sp"
        android:text="@string/confirm_remove"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_16_sp" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/size_8_sp"
        android:layout_marginStart="@dimen/size_8_sp"
        android:background="@android:color/white"
        android:padding="@dimen/size_8_sp"
        tools:ignore="PxUsage" />

    <Button
        android:id="@+id/undo_row_undobutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:drawableLeft="@drawable/ic_undo"
        android:drawableStart="@drawable/ic_undo"
        android:text="@string/undo_position"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size_16_sp" />
</LinearLayout>