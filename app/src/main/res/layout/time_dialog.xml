<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_16"
        android:layout_marginEnd="@dimen/text_margin_32"
        android:layout_marginStart="@dimen/text_margin_32"
        android:layout_marginTop="@dimen/text_margin_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/time_image"
            android:layout_width="@dimen/icon_image_dialog"
            android:layout_height="@dimen/icon_image_dialog"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/text_margin_32"
            android:contentDescription="@string/cd_image"
            android:src="@drawable/time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_time"
                android:textColor="@color/colorDialogText"
                android:textSize="@dimen/text_font_size_20" />

            <TextView
                android:id="@+id/time_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current: "
                android:textColor="@color/colorDialogText"
                android:textSize="@dimen/text_font_size_16" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_16"
        android:layout_marginLeft="@dimen/text_margin_32"
        android:layout_marginRight="@dimen/text_margin_32"
        android:layout_marginTop="0dp"
        android:text="@string/time_message"
        android:textColor="@color/colorDialogText"
        android:textSize="@dimen/text_font_size_18" />

    <TimePicker
        android:id="@+id/picker_time_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/text_margin_32"
        android:layout_marginEnd="@dimen/text_margin_32"
        android:layout_marginStart="@dimen/text_margin_32" />

    <CheckBox
        android:id="@+id/checkbox_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_16"
        android:layout_marginLeft="@dimen/text_margin_32"
        android:layout_marginRight="@dimen/text_margin_32"
        android:buttonTint="@color/colorBrokenWhite"
        android:clickable="true"
        android:foregroundTint="@color/colorBrokenWhite"
        android:text="TURN ON sending daily summaries"
        android:textColor="@color/colorBrokenWhite"
        android:textSize="@dimen/text_font_size_14" />
</LinearLayout>

