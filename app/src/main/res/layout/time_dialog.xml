<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightOrange"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_16"
        android:layout_marginEnd="@dimen/text_margin_32"
        android:layout_marginStart="@dimen/text_margin_32"
        android:layout_marginTop="@dimen/text_margin_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/time_image"
            android:layout_width="@dimen/icon_image_dialog"
            android:layout_height="@dimen/icon_image_dialog"
            android:layout_marginEnd="@dimen/text_margin_32"
            android:layout_weight="1"
            android:contentDescription="@string/cd_image"
            android:src="@drawable/time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_change"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialog_time"
                android:textColor="@color/colorDialogText"
                android:textSize="@dimen/title_font_size" />

            <TextView
                android:id="@+id/time_current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current: "
                android:textColor="@color/colorDialogText"
                android:textSize="@dimen/text_small_font_size" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_margin_32"
            android:layout_marginLeft="@dimen/text_margin_32"
            android:layout_marginRight="@dimen/text_margin_32"
            android:layout_marginTop="0dp"
            android:text="@string/lorem_ipsum"
            android:textColor="@color/colorDialogText"
            android:textSize="@dimen/text_small_font_size" />

    </LinearLayout>

    <TimePicker
        android:id="@+id/picker_time_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/text_margin_32"
        android:layout_marginEnd="@dimen/text_margin_32"
        android:layout_marginStart="@dimen/text_margin_32" />

</LinearLayout>

