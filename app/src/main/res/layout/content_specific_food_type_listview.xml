<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_listview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="76sp"
    android:background="@color/colorMainBackground"
    android:paddingEnd="@dimen/text_padding"
    android:paddingStart="@dimen/text_padding"
    android:paddingTop="@dimen/text_padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SpecificFoodTypeActivity"
    tools:showIn="@layout/activity_specific_food_type_scrolling">

    <ListView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_specific_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:drawSelectorOnTop="true"
        android:fadingEdge="none"
        android:fitsSystemWindows="true"
        android:scrollbarStyle="outsideOverlay"
        tools:ignore="overdraw" />

</RelativeLayout>
