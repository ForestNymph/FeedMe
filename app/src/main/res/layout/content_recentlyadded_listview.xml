<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60sp"
    android:background="@color/colorMainBackground"
    android:paddingEnd="@dimen/text_padding_16"
    android:paddingStart="@dimen/text_padding_16"
    android:paddingTop="@dimen/text_padding_16"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".RecentlyAddedFoodActivity"
    tools:showIn="@layout/activity_recentlyadded_food">

    <ListView
        android:id="@+id/activity_summary_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:drawSelectorOnTop="true"
        android:fadingEdge="none"
        android:fitsSystemWindows="true"
        android:scrollbarStyle="outsideOverlay"
        tools:ignore="overdraw" />
</RelativeLayout>
