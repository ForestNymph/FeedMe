<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_16_sp"
        android:layout_marginEnd="@dimen/size_32_sp"
        android:layout_marginStart="@dimen/size_32_sp"
        android:layout_marginTop="@dimen/size_16_sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/server_image"
            android:layout_width="@dimen/icon_image_dialog"
            android:layout_height="@dimen/icon_image_dialog"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/size_32_sp"
            android:contentDescription="@string/cd_image"
            android:src="@drawable/server" />

        <TextView
            android:id="@+id/server_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/dialog_server"
            android:textColor="@color/colorStandardWhite"
            android:textSize="@dimen/size_20_sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_32_sp"
        android:layout_marginRight="@dimen/size_32_sp"
        android:paddingBottom="@dimen/size_16_sp"
        android:text="@string/server_message"
        android:textColor="@color/colorStandardWhite"
        android:textSize="@dimen/size_16_sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_32_sp"
            android:layout_marginRight="@dimen/size_32_sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_24_sp"
                android:text="Server address:"
                android:textColor="@color/colorStandardWhite"
                android:textSize="@dimen/size_16_sp" />

            <EditText
                android:id="@+id/server_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorBrokenWhite"
                android:inputType="textUri"
                android:maxLines="1"
                android:paddingBottom="8sp"
                android:paddingEnd="@dimen/size_16_sp"
                android:paddingStart="@dimen/size_16_sp"
                android:paddingTop="8sp"
                android:textColor="@color/colorTextGray"
                android:textSize="@dimen/size_18_sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_24_sp"
                android:text="Server port:"
                android:textColor="@color/colorStandardWhite"
                android:textSize="@dimen/size_16_sp" />

            <EditText
                android:id="@+id/port_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorBrokenWhite"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="8sp"
                android:paddingEnd="@dimen/size_16_sp"
                android:paddingStart="@dimen/size_16_sp"
                android:paddingTop="8sp"
                android:textColor="@color/colorTextGray"
                android:textSize="@dimen/size_18_sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_24_sp"
                android:text="Database name:"
                android:textColor="@color/colorStandardWhite"
                android:textSize="@dimen/size_16_sp" />

            <EditText
                android:id="@+id/db_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorBrokenWhite"
                android:inputType="text"
                android:maxLines="1"
                android:paddingBottom="8sp"
                android:paddingEnd="@dimen/size_16_sp"
                android:paddingStart="@dimen/size_16_sp"
                android:paddingTop="8sp"
                android:textColor="@color/colorTextGray"
                android:textSize="@dimen/size_18_sp" />

            <Button
                android:id="@+id/db_sync_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_24_sp"
                android:layout_marginTop="@dimen/size_32_sp"
                android:background="@color/colorLightPurple"
                android:gravity="center_vertical|center_horizontal"
                android:paddingBottom="8sp"
                android:paddingEnd="@dimen/size_16_sp"
                android:paddingStart="@dimen/size_16_sp"
                android:paddingTop="8sp"
                android:stateListAnimator="@null"
                android:text="Sync now"
                android:textColor="@color/colorBrokenWhite"
                android:textSize="@dimen/size_16_sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

