<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorFiche"
    android:orientation="horizontal"
    android:padding="16sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:ignore="overdraw">

    <TextView
        android:id="@+id/activity_card_summary_left_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="Roboto"
        android:gravity="start|center_vertical"
        android:textColor="@color/colorTextGray"
        android:textSize="@dimen/text_font_size_18"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/activity_card_summary_right_imageview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="Roboto"
        android:gravity="end|center_vertical"
        android:paddingRight="@dimen/text_padding_16"
        android:textColor="@color/colorTextGray"
        android:textSize="@dimen/text_font_size_18"
        tools:ignore="UnusedAttribute" />
</LinearLayout>
