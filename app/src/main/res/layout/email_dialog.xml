<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightOrange"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_margin_16"
        android:layout_marginEnd="@dimen/text_margin_32"
        android:layout_marginStart="@dimen/text_margin_32"
        android:layout_marginTop="@dimen/text_margin_16"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/email_image"
            android:layout_width="@dimen/icon_image_dialog"
            android:layout_height="@dimen/icon_image_dialog"
            android:layout_marginEnd="@dimen/text_margin_32"
            android:contentDescription="@string/cd_image"
            android:src="@drawable/email" />

        <TextView
            android:id="@+id/email_change"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/dialog_email"
            android:textColor="@color/colorDialogText"
            android:textSize="@dimen/text_font_size_20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/text_margin_32"
        android:layout_marginRight="@dimen/text_margin_32"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mail_message"
            android:textColor="@color/colorDialogText"
            android:textSize="@dimen/text_font_size_16" />

        <TextView
            android:layout_marginTop="@dimen/text_margin_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/mailfrom_mail"
            android:text="Gmail address:"
            android:textColor="@color/colorDialogText"
            android:textSize="@dimen/text_font_size_16" />

        <EditText
            android:id="@id/mailfrom_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorBrokeWhite"
            android:inputType="textEmailAddress"
            android:paddingBottom="8sp"
            android:paddingEnd="@dimen/text_padding_16"
            android:paddingStart="@dimen/text_padding_16"
            android:paddingTop="8sp"
            android:singleLine="true"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/text_font_size_18" />

        <TextView
            android:layout_marginTop="@dimen/text_margin_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/mailfrom_password"
            android:text="Gmail password:"
            android:textColor="@color/colorDialogText"
            android:textSize="@dimen/text_font_size_16" />

        <EditText
            android:id="@+id/mailfrom_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorBrokeWhite"
            android:inputType="textPassword"
            android:paddingBottom="8sp"
            android:paddingEnd="@dimen/text_padding_16"
            android:paddingStart="@dimen/text_padding_16"
            android:paddingTop="8sp"
            android:singleLine="true"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/text_font_size_18" />

        <TextView
            android:layout_marginTop="@dimen/text_margin_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@+id/mailto_mail"
            android:text="Destination address:"
            android:textColor="@color/colorDialogText"
            android:textSize="@dimen/text_font_size_16" />

        <EditText
            android:id="@+id/mailto_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="32sp"
            android:background="@color/colorBrokeWhite"
            android:inputType="textEmailAddress"
            android:paddingBottom="8sp"
            android:paddingEnd="@dimen/text_padding_16"
            android:paddingStart="@dimen/text_padding_16"
            android:paddingTop="8sp"
            android:singleLine="true"
            android:textColor="@color/colorTextGray"
            android:textSize="@dimen/text_font_size_18" />

    </LinearLayout>


</LinearLayout>

