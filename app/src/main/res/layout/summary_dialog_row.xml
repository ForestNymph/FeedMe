<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightOrange"
    android:orientation="horizontal"
    android:paddingBottom="8sp"
    android:paddingTop="8sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:ignore="overdraw">

    <TextView
        android:id="@+id/summary_product"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_4"
        android:layout_marginStart="@dimen/text_margin_16"
        android:layout_weight="2"
        android:gravity="start|center_vertical"
        android:textColor="@color/colorBrokenWhite"
        android:textSize="@dimen/text_font_size_18"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/summary_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_4"
        android:layout_marginStart="@dimen/text_margin_4"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:paddingEnd="@dimen/text_padding_16"
        android:textColor="@color/colorBrokenWhite"
        android:textSize="@dimen/text_font_size_18" />

    <TextView
        android:id="@+id/summary_percentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_16"
        android:layout_marginStart="@dimen/text_margin_4"
        android:layout_weight="1"
        android:gravity="end|center_vertical"
        android:paddingEnd="@dimen/text_padding_16"
        android:textColor="@color/colorBrokenWhite"
        android:textSize="@dimen/text_font_size_18" />
</LinearLayout>
